{
  "name": "core-unit",
  "version": "1.0.0",
  "description": "Core unit converter",
  "main": "dist/index.js",
  "bin": {
    "core-unit": "bin/core-unit-converter"
  },
  "scripts": {
    "lint": "standard --fix *.js test/*.js bin/*",
    "coverage": "node_modules/nyc/bin/nyc.js report --reporter=text-lcov | ./node_modules/.bin/coveralls",
    "test": "tape ./test/*.js",
    "test:report": "./node_modules/nyc/bin/nyc.js --reporter=html --reporter=text tape ./test/index.js",
    "build": "babel index.js --presets babel-preset-es2015 --out-dir dist/",
    "copy": "yes | cp -rf dist/index.js extension/moz/popup/dist/bundle.js",
    "extension": "cd extension/moz && web-ext build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cryptohub-digital/core-unit"
  },
  "bugs": {
    "url": "https://github.com/cryptohub-digital/core-unit/issues"
  },
  "homepage": "https://github.com/cryptohub-digital/core-unit#readme",
  "contributors": [
    {
      "name": "CRYPTO â–ª HUB",
      "url": "https://github.com/cryptohub-digital"
    },
    {
      "name": "Miguel Mota",
      "email": "hello@miguelmota.com",
      "url": "https://miguelmota.com/"
    }
  ],
  "license": {
    "type": "MIT",
    "url": "https://github.com/cryptohub-digital/core-unit/blob/master/LICENSE"
  },
  "keywords": [
    "crypto",
    "core",
    "blockchain",
    "ore",
    "unit",
    "converter",
    "tool",
    "util",
    "cli"
  ],
  "dependencies": {
    "bignumber.js": "^9.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^10.0.0",
    "coveralls": "^3.1.1",
    "nyc": "^15.1.0",
    "standard": "^17.0.0",
    "tape": "^5.6.1"
  }
}
